@model PetApp_Empresa.Models.CarritoAccesorio

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CarritoAccesorio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarritoId" class="control-label"></label>
                <select asp-for="CarritoId" class ="form-control" asp-items="ViewBag.CarritoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccesorioId" class="control-label"></label>
                <select asp-for="AccesorioId" class ="form-control" asp-items="ViewBag.AccesorioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

