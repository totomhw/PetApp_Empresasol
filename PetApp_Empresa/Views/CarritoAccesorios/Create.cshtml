@model PetApp_Empresa.Models.CarritoAccesorio

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CarritoAccesorio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarritoId" class="control-label"></label>
                <select asp-for="CarritoId" class ="form-control" asp-items="ViewBag.CarritoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccesorioId" class="control-label"></label>
                <select asp-for="AccesorioId" class ="form-control" asp-items="ViewBag.AccesorioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
/* Fondo general */
body {
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
}

/* Contenedor principal */
.details-container {
    animation: fadeInScale 0.8s ease-out forwards;
    opacity: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Caja del contenido - Fondo blanco más corto */
.details-box {
    background: #ffffff;
    padding: 40px; /* Ajustado para que sea más estrecho */
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    width: 550px; /* Hecho un poco más ancho */
    margin: auto;
    animation: fadeInScale 0.8s ease-out forwards;
    border: 1px solid #ebebeb;
    transition: all 0.3s ease-in-out;
}

.details-box:hover {
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
    transform: translateY(-5px);
}

/* Animación de entrada */
@@keyframes fadeInScale {
    from {
        opacity: 0;
        transform: scale(0.95);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

/* Títulos elegantes */
.details-box h1 {
    font-size: 2.5rem; /* Tamaño de fuente ajustado */
    font-weight: bold;
    color: #333333;
    text-align: center;
    margin-bottom: 20px;
    text-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    transition: text-shadow 0.3s ease, transform 0.3s ease, color 0.3s ease;
}

.details-box h1:hover {
    text-shadow: 0 6px 15px rgba(0, 123, 255, 0.7);
    transform: scale(1.1);
    color: #007bff; /* Cambia el color del título al pasar el cursor */
}

/* Listas con estilo */
dl {
    font-size: 1.2rem;
    line-height: 1.8;
    color: #495057;
    margin-top: 20px;
}

dt {
    font-weight: bold;
    color: #212529;
}

dd {
    color: #495057;
    margin-left: 20px;
}

/* Contenedor de botones con más espacio entre ellos */
.btn-container {
    text-align: center;
    margin-top: 30px; /* Aumentado el margen superior */
}

/* Botones primarios */
.btn-primary {
    background: linear-gradient(135deg, #7A1E3D, #A73E5E);
    border: none;
    color: white;
    font-size: 1rem;
    padding: 15px 30px;
    border-radius: 8px;
    font-weight: bold;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    display: inline-block;
    text-decoration: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #5B152E, #8B284C);
    box-shadow: 0 6px 15px rgba(122, 30, 61, 0.4);
    transform: translateY(-3px) scale(1.05);
    cursor: pointer;
}

.btn-primary:active {
    transform: translateY(1px) scale(1);
}

/* Botones secundarios */
.btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
    color: white;
    font-size: 1rem;
    padding: 12px 30px;
    border-radius: 8px;
    font-weight: bold;
    transition: all 0.3s ease;
}

.btn-secondary:hover {
    background-color: #5a6268;
    border-color: #5a6268;
    box-shadow: 0 6px 15px rgba(92, 117, 125, 0.4);
    transform: translateY(-3px) scale(1.05);
    cursor: pointer;
}

.btn-secondary:active {
    transform: translateY(1px) scale(1);
}

/* Estilo para el contenedor de la página */
.main-content {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #f8f9fa;
}
</style>


