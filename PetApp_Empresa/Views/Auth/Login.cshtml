@model PetApp_Empresa.Models.Usuario
@{
    ViewData["Title"] = "Iniciar Sesión";
    ViewData["HideLayout"] = true;
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh; margin: 0; padding: 0;">
    <div class="col-md-4">
        <div class="card shadow custom-border">
            <div class="card-body">
                <h2 class="text-center mb-4 text-white">Iniciar Sesión</h2>
                <form asp-action="Login">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label text-white">Usuario</label>
                        <input asp-for="Nombre" class="form-control custom-input" placeholder="Ingresa tu usuario" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label text-white">Contraseña</label>
                        <input asp-for="Password" class="form-control custom-input" type="password" placeholder="Ingresa tu contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Iniciar Sesión" class="btn btn-primary w-100" />
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <a asp-action="Register" class="text-decoration-none text-white">¿No tienes una cuenta? Regístrate</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="carousel-container">
    <div class="carousel">
        <img src="https://p4.wallpaperbetter.com/wallpaper/842/447/739/dogs-1366x768-animals-dogs-hd-art-wallpaper-preview.jpg" alt="Imagen 1">
        <img src="https://img3.wallspic.com/crops/5/1/6/4/7/174615/174615-perro-gran_dans-perro_pug-pug-bulldog-1366x768.jpg" alt="Imagen 2">
        <img src="https://img1.wallspic.com/crops/1/1/6/5/5/155611/155611-ridgeback_de_rodesia-pastor_aleman-cane_corso-raza_de_perro-cachorro-1366x768.jpg" alt="Imagen 3">
        <img src="https://img1.wallspic.com/crops/5/8/1/5/95185/95185-cachorro_de_husky_siberiano_blanco_tirado_en_el_suelo-1366x768.jpg" alt="Imagen 4">
        <img src="https://img3.wallspic.com/crops/2/6/5/6/5/156562/156562-perro-pastor_australiano-raza_de_perro-gato-canidae-1366x768.jpg" alt="Imagen 5">
    </div>
</div>

@section Scripts {
    <script>
        const carousel = document.querySelector('.carousel');
        const images = carousel.children;
        let currentIndex = 0;

        function moveToNextImage() {
            for (let i = 0; i < images.length; i++) {
                images[i].style.opacity = '0';
            }

            images[currentIndex].style.opacity = '1';
            currentIndex = (currentIndex + 1) % images.length;
        }

        setInterval(moveToNextImage, 4000); // Cambia cada 4 segundos
    </script>
}

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        flex-direction: column;
        background-color: #C03540;
        color: white;
        overflow: hidden;
    }

    .carousel-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        z-index: -1;
    }

    .carousel {
        position: relative;
        width: 100%;
        height: 100%;
    }

        .carousel img {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: opacity 1s ease-in-out;
            opacity: 0;
            /* Filtro más rojo */
            filter: brightness(30%) sepia(1) hue-rotate(-30deg) saturate(3);
        }

            .carousel img:first-child {
                opacity: 1;
            }

    .card {
        border-radius: 10px;
        background-color: #C03540;
        padding: 20px;
        z-index: 1;
    }

    .custom-border {
        border: 4px solid #FFFFFF;
        position: relative;
    }

        .custom-border::before {
            content: "Univalle";
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #C03540;
            color: #FFFFFF;
            font-weight: bold;
            font-size: 0.9rem;
            padding: 2px 10px;
            border-radius: 8px;
        }

    .text-white {
        color: #FFFFFF;
    }

    .custom-input {
        background-color: #FFFFFF;
        color: #C03540;
        border: 1px solid #FFFFFF;
    }

        .custom-input::placeholder {
            color: #C03540;
        }

        .custom-input:focus {
            background-color: #FFFFFF;
            border-color: #FFFFFF;
            box-shadow: 0 0 5px #FFFFFF;
        }

    .btn-primary {
        background-color: #FFFFFF;
        color: #C03540;
        border: none;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #F7F7F7;
            transform: scale(1.05);
        }
</style>
