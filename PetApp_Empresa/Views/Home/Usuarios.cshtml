@model IEnumerable<PetApp_Empresa.Models.Usuario>

<div class="container-fluid py-5">
    <!-- Título estilizado con animación -->
    <div class="text-center mb-4 animate-fade-in">
        <h1 class="display-4 fw-bold title-gradient">Lista de Usuarios</h1>
        <p class="lead text-muted">Explora y administra los usuarios registrados en la plataforma.</p>
    </div>

    <!-- Tabla estilizada -->
    <div class="table-responsive futuristic-table animate-slide-up">
        <table class="table table-hover align-middle">
            <thead class="table-header">
                <tr>
                    <th>Nombre</th>
                    <th>Correo Electrónico</th>
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr class="table-row">
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Email</td>
                        <td>
                            @if (usuario.UsuarioRols != null && usuario.UsuarioRols.Any())
                            {
                                <ul>
                                    @foreach (var rol in usuario.UsuarioRols)
                                    {
                                        <li>@rol.Rol.Nombre</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-danger">Sin rol asignado</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Título estilizado */
    .title-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Tabla futurista */
    .futuristic-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
    }

    /* Encabezado de tabla */
    .table-header {
        background: linear-gradient(to right, #800020, #a81c1c);
        color: #ffffff;
        font-size: 1rem;
        font-weight: bold;
    }

    /* Filas de tabla */
    .table-row:hover {
        background-color: rgba(168, 28, 28, 0.1);
        animation: rowGlow 1s infinite alternate;
    }

    /* Animación de resplandor para filas */
    @@keyframes rowGlow {
        0% {
            box-shadow: none;
        }
        100% {
            box-shadow: 0px 6px 15px rgba(168, 28, 28, 0.2);
        }
    }

    /* Animación de entrada */
    .animate-fade-in {
        opacity: 0;
        animation: fadeIn 1.5s forwards;
    }

    .animate-slide-up {
        opacity: 0;
        transform: translateY(50px);
        animation: slideUp 1s forwards;
    }

    @@keyframes fadeIn {
        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Estilo de celdas */
    .table td {
        padding: 15px;
        font-size: 1rem;
        color: #343a40;
    }

    .table th {
        padding: 15px;
        text-align: center;
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
