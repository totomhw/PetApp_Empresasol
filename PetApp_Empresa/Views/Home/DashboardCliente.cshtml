@model PetApp_Empresa.Models.Usuario
@{
    ViewData["Title"] = "Panel de Cliente";
    var adopciones = ViewData["Adopciones"] as IEnumerable<PetApp_Empresa.Models.Adopcione>;
    var donaciones = ViewData["Donaciones"] as IEnumerable<PetApp_Empresa.Models.Donacione>;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
        .carousel {
            margin: 0 auto;
            max-width: 100%;
        }

        .carousel-item img {
            height: 400px; /* Altura uniforme */
            object-fit: cover; /* Ajuste de imagen */
        }

        .carousel-caption {
            background: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 10px;
        }

        .carousel-text {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffffff;
        }

        .client-options .option-card {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .client-options .option-card:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
            }

        .client-options .icon-red {
            color: #b71c1c;
            font-size: 2.5rem;
        }

        .client-options .icon-blue {
            color: #1565c0;
            font-size: 2.5rem;
        }

        .client-options .icon-green {
            color: #2e7d32;
            font-size: 2.5rem;
        }

        .client-options .icon-orange {
            color: #f57c00;
            font-size: 2.5rem;
        }

        .btn-option {
            margin-top: 10px;
            background: #e0e0e0;
            color: #000;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            transition: background 0.3s ease, transform 0.3s ease;
        }

            .btn-option:hover {
                background: #b71c1c;
                color: #fff;
                transform: translateY(-3px);
            }
    </style>
</head>
<body>
    <div class="panel-container">
        <!-- Carrusel de Bienvenida -->
        <div id="carouselExampleIndicators" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <a href="@Url.Action("VistaMascota", "Mascotas")">
                        <img src="https://media.istockphoto.com/id/513133900/es/foto/oro-retriever-sentado-en-frente-de-un-fondo-blanco.jpg?s=612x612&w=0&k=20&c=0lRWImB8Y4p6X6YGt06c6q8I3AqBgKD-OGQxjLCI5EY=" class="d-block w-100" alt="Adoptar">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel-text">¿Quieres adoptar una mascota?</h5>
                        </div>
                    </a>
                </div>
                <div class="carousel-item">
                    <a href="@Url.Action("ListadoAccesorios", "Accesorios")">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcREzFFwrXe2kl1G7W4uLmLS-z5mESml63nI3Q&s" class="d-block w-100" alt="Accesorios">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel-text">Compra accesorios para tu mascota aquí.</h5>
                        </div>
                    </a>
                </div>
                <div class="carousel-item">
                    <a href="@Url.Action("Index", "Donaciones")">
                        <img src="https://images.ecestaticos.com/h34TvzTFVdrau9Un4Wdmwhed_e4=/0x115:2265x1390/1200x900/filters:fill(white):format(jpg)/f.elconfidencial.com%2Foriginal%2F8ec%2F08c%2F85c%2F8ec08c85c866ccb70c4f1c36492d890f.jpg" class="d-block w-100" alt="Donaciones">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel-text">Apoya a nuestros refugios con una donación.</h5>
                        </div>
                    </a>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>
        <!-- Opciones para el Cliente -->
        <div class="client-options mt-4 mb-4 row text-center">
            <div class="col-md-3">
                <div class="option-card">
                    <i class="fas fa-paw icon-red"></i>
                    <h5>Adoptar una mascota</h5>
                    <p>Encuentra tu nueva mascota aquí.</p>
                    <a class="btn btn-option" href="@Url.Action("VistaMascota", "Mascotas")">Ir</a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="option-card">
                    <i class="fas fa-box-open icon-blue"></i>
                    <h5>Comprar Accesorios</h5>
                    <p>Explora accesorios para tu mascota.</p>
                    <a class="btn btn-option" href="@Url.Action("ListadoAccesorios", "Accesorios")">Ir</a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="option-card">
                    <i class="fas fa-donate icon-green"></i>
                    <h5>Hacer una Donación</h5>
                    <p>Ayuda a nuestros refugios con tu aporte.</p>
                    <a class="btn btn-option" href="@Url.Action("Index", "Donaciones")">Ir</a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="option-card">
                    <i class="fas fa-history icon-orange"></i>
                    <h5>Historial de Compras</h5>
                    <p>Revisa tus compras anteriores.</p>
                    <a class="btn btn-option" href="@Url.Action("HistorialCompras", "CarritoDeCompras")">Ir</a>
                </div>
            </div>
        </div>

        <!-- Sección de Adopciones -->
        <h3 class="text-gradient">Mis Adopciones</h3>
        @if (adopciones != null && adopciones.Any())
        {
            <ul>
                @foreach (var adopcion in adopciones)
                {
                    <li>
                        Mascota: @adopcion.Mascota.Nombre - Estado: @adopcion.Estado - Fecha: @adopcion.FechaSolicitud?.ToString("dd/MM/yyyy")
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No has adoptado ninguna mascota.</p>
        }

        <hr />

        <!-- Sección de Donaciones -->
        <h3 class="text-gradient">Mis Donaciones</h3>
        @if (donaciones != null && donaciones.Any())
        {
            <ul>
                @foreach (var donacion in donaciones)
                {
                    <li>
                        Refugio: @donacion.Refugio.Nombre - Monto: @donacion.Monto.ToString("C") - Fecha: @donacion.FechaDonacion?.ToString("dd/MM/yyyy")
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No has realizado donaciones.</p>
        }

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
