@{
    ViewData["Title"] = "Vendedor Dashboard";
}

<div class="container py-5">
    <!-- Título -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient">@ViewData["Title"]</h1>
        <p class="lead text-muted animate-intro">
            Bienvenido al panel de Vendedor. Aquí puedes gestionar el inventario de accesorios y realizar ventas.
        </p>
    </div>


 

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Título con gradiente */
    .text-gradient {
        background: linear-gradient(to right, #800020, #a81c1c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Animación de entrada */
    .animate-intro {
        opacity: 0;
        animation: fadeInUp 1.5s ease-in-out forwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Contenedor de opciones */
    .menu-options {
        max-width: 600px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Botones de las opciones */
    .btn-option {
        background: linear-gradient(to right, #800020, #a81c1c);
        color: #ffffff !important;
        font-weight: bold;
        padding: 12px 20px;
        border-radius: 8px;
        text-decoration: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-option:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(168, 28, 28, 0.7);
    }

    .btn-option i {
        font-size: 1.5rem;
    }

    /* Íconos con colores distintivos */
    .icon-red {
        color: #a81c1c; /* Rojo guindo */
    }

    .icon-blue {
        color: #0056b3; /* Azul oscuro */
    }

    .icon-green {
        color: #28a745; /* Verde */
    }
</style>

<!-- Librerías necesarias -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
