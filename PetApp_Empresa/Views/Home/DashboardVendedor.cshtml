@{
    ViewData["Title"] = "Dashboard Vendedor";
    var accesoriosDisponibles = ViewData["AccesoriosDisponibles"] as IEnumerable<dynamic>;
    var pagosValidados = ViewData["PagosValidados"] as IEnumerable<dynamic>;
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient">@ViewData["Title"]</h1>
        <p class="lead text-muted">Bienvenido al panel del vendedor. Aquí puedes visualizar los accesorios disponibles y las validaciones de pago.</p>
    </div>

    <!-- Tarjetas con gráficos -->
    <div class="row g-4 justify-content-center">
        <!-- Gráfico de Accesorios Disponibles -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center text-danger fw-bold">Accesorios Disponibles</h5>
                    <div style="position: relative; height:300px;">
                        <canvas id="accesoriosChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráfico de Pagos Validados -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center text-danger fw-bold">Pagos Validados</h5>
                    <div style="position: relative; height:300px;">
                        <canvas id="pagosChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Opciones adicionales -->
    <div class="row g-3 justify-content-center mt-5">
        <!-- Tarjeta Historial de Compras -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card card-custom shadow card-hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-bag text-danger icon-custom"></i>
                    <h6 class="card-title mt-2">Historial de Compras</h6>
                    <p class="text-muted small">Mira tus compras realizadas.</p>
                    <a class="btn btn-danger btn-sm mt-2" asp-area="" asp-controller="CarritoDeCompras" asp-action="HistorialCompras">Ir</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta Accesorios -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card card-custom shadow card-hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-box-open text-primary icon-custom"></i>
                    <h6 class="card-title mt-2">Accesorios</h6>
                    <p class="text-muted small">Gestiona accesorios.</p>
                    <a class="btn btn-primary btn-sm mt-2" asp-area="" asp-controller="Accesorios" asp-action="Index">Ir</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta Validaciones de Pago -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card card-custom shadow card-hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-primary icon-custom"></i>
                    <h6 class="card-title mt-2">Validaciones de Pago</h6>
                    <p class="text-muted small">Revisa validaciones de pago.</p>
                    <a class="btn btn-primary btn-sm mt-2" asp-area="" asp-controller="Validaciones" asp-action="ValidacionesPago">Ir</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de accesorios disponibles
        const accesorios = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(accesoriosDisponibles));
        const accesoriosLabels = accesorios.map(a => a.Nombre);
        const accesoriosData = accesorios.map(a => a.CantidadDisponible);

        const ctxAccesorios = document.getElementById('accesoriosChart').getContext('2d');
        new Chart(ctxAccesorios, {
            type: 'bar',
            data: {
                labels: accesoriosLabels,
                datasets: [{
                    label: 'Cantidad Disponible',
                    data: accesoriosData,
                    backgroundColor: 'rgba(192, 53, 64, 0.7)',
                    borderColor: 'rgba(192, 53, 64, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Gráfico de pagos validados
        const pagos = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(pagosValidados));
        const pagosLabels = pagos.map(p => p.Estado);
        const pagosData = pagos.map(p => p.Cantidad);

        const ctxPagos = document.getElementById('pagosChart').getContext('2d');
        new Chart(ctxPagos, {
            type: 'pie',
            data: {
                labels: pagosLabels,
                datasets: [{
                    label: 'Estado de Pagos',
                    data: pagosData,
                    backgroundColor: [
                        'rgba(220, 53, 69, 0.7)', // Rojo para no validados
                        'rgba(40, 167, 69, 0.7)'  // Verde para validados
                    ],
                    borderColor: [
                        'rgba(220, 53, 69, 1)',    // Rojo para no validados
                        'rgba(40, 167, 69, 1)'     // Verde para validados
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });
    </script>
}
