@{
    ViewData["Title"] = "Panel de Usuario";
    var adopciones = ViewData["Adopciones"] as IEnumerable<PetApp_Empresa.Models.Adopcione>;
}

<h2>Bienvenido al Panel de Usuario</h2>

<!-- Botones de acción -->
<div>
    <a class="btn btn-primary" asp-action="Adoptar">Adoptar una mascota</a>
    <a class="btn btn-secondary" asp-action="ComprarAccesorios">Comprar Accesorios</a>
    <a class="btn btn-success" asp-action="Donar">Hacer una Donación</a>
</div>

<hr />

<h3>Mis Adopciones</h3>
@if (adopciones != null && adopciones.Any())
{
    <ul>
        @foreach (var adopcion in adopciones)
        {
            <li>
                Mascota: @adopcion.Mascota.Nombre - Fecha de adopción: @adopcion.FechaAprobacion?.ToString("dd/MM/yyyy")
            </li>
        }
    </ul>
}
else
{
    <p>No has adoptado ninguna mascota.</p>
}
