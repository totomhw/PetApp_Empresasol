@{
    ViewData["Title"] = "Pagar con QR";
}

<div class="container py-5">
    <!-- Título -->
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-gradient">@ViewData["Title"]</h1>
        <p class="lead text-muted">
            Escanea el siguiente código QR para completar tu pago y adjunta el comprobante.
        </p>
    </div>

    <!-- Imagen del QR -->
    <div class="d-flex justify-content-center mb-4 animate-qr">
        <div class="qr-code-container">
            <img src="~/images/qr_code.jpeg" alt="Código QR para el pago" class="qr-code-image shadow-sm" />
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="text-center animate-buttons">
        <form method="post" action="/CarritoDeCompras/DescargarQR" style="display: inline-block;">
            <button type="submit" class="btn btn-primary btn-lg shadow-sm me-3">
                <i class="fas fa-download me-2"></i>Descargar Imagen
            </button>
        </form>
        <a href="/CarritoDeCompras/FormularioPago" class="btn btn-gradient btn-lg shadow-sm text-white">
            <i class="fas fa-arrow-right me-2"></i>Siguiente
        </a>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    /* Título con gradiente */
    .text-gradient {
        background: linear-gradient(to right, #800020, #a81c1c); /* Rojo guindo */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Contenedor de la imagen QR con animación */
    .qr-code-container {
        position: relative;
        width: fit-content;
        padding: 10px;
        border-radius: 10px;
        background: linear-gradient(to right, #800020, #a81c1c);
        overflow: hidden;
    }

    .qr-code-container::before,
    .qr-code-container::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 10px;
        border: 2px solid transparent;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
        animation: glowingBorder 2s infinite linear;
    }

    .qr-code-container::before {
        animation-delay: 0s;
    }

    .qr-code-container::after {
        animation-delay: 1s;
    }

    .qr-code-image {
        width: 330px;
        height: 340px;
        border-radius: 8px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .qr-code-image:hover {
        transform: scale(1.05);
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* Botones */
    .btn {
        font-weight: bold;
        border-radius: 0.5rem;
    }

    .btn-primary {
        background-color: #800020; /* Rojo guindo */
        border: none;
        color: #ffffff;
    }

    .btn-primary:hover {
        background-color: #a81c1c; /* Más claro */
    }

    /* Botón Siguiente con animación de luz brillante */
    .btn-gradient {
        background: linear-gradient(to right, #800020, #a81c1c); /* Rojo guindo */
        color: #ffffff !important; /* Asegura que el texto sea blanco */
        border: none;
        font-weight: bold;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1.2rem;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

    .btn-gradient::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 200%;
        height: 100%;
        background: linear-gradient(90deg, rgba(255, 255, 255, 0.4), transparent);
        z-index: -1;
        transition: transform 0.3s;
    }

    .btn-gradient:hover::before {
        transform: translateX(100%);
    }

    .btn-gradient:hover {
        transform: scale(1.05);
        box-shadow: 0px 8px 20px rgba(168, 28, 28, 0.5);
    }

    /* Animaciones */
    @@keyframes glowingBorder {
        0% {
            transform: scale(1);
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
        }
        50% {
            transform: scale(1.1);
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.6);
        }
        100% {
            transform: scale(1);
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
        }
    }

    .animate-qr {
        animation: fadeInQR 1s ease-out forwards;
    }

    .animate-buttons {
        animation: fadeInButtons 1.2s ease-out forwards;
    }

    @@keyframes fadeInQR {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInButtons {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
