@model PetApp_Empresa.Models.CarritoDeCompra

@{
    ViewData["Title"] = "Carrito de Compras";
}

<div class="container py-5 animate-container">
    <!-- Título -->
    <div class="text-center mb-5 animate-title">
        <h1 class="display-4 text-gradient">@ViewData["Title"]</h1>
        <p class="lead text-muted">Revisa los productos seleccionados y procede con el pago.</p>
    </div>

    <!-- Tabla de productos -->
    <div class="table-responsive animate-table">
        <table class="table table-hover table-borderless shadow-sm rounded">
            <thead class="table-gradient text-white">
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.CarritoAccesorios != null && Model.CarritoAccesorios.Any())
                {
                    foreach (var item in Model.CarritoAccesorios)
                    {
                        <tr class="align-middle animate-row">
                            <td>@item.Accesorio?.Nombre</td>
                            <td>@item.Cantidad</td>
                            <td>@item.Accesorio?.Precio.ToString("C")</td>
                            <td>@(item.Accesorio?.Precio * item.Cantidad).ToString("C")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted animate-row">No hay productos en el carrito.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Total y botón de pago -->
    @if (Model.CarritoAccesorios != null && Model.CarritoAccesorios.Any())
    {
        <div class="text-center mt-4 animate-total">
            <h3>Total: <span class="text-success">@Model.Total?.ToString("C")</span></h3>
            <form asp-action="ProcesarPago" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-accent mt-3">
                    <i class="fas fa-credit-card me-2"></i>Realizar Pago
                </button>
            </form>
        </div>
    }
    else
    {
        <h3 class="text-center text-muted animate-empty">El carrito está vacío.</h3>
    }
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Gradiente para títulos */
    .text-gradient {
        background: linear-gradient(to right, #800020, #a81c1c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Tabla */
    .table-gradient {
        background: linear-gradient(to right, #800020, #a81c1c);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(168, 28, 28, 0.1);
    }

    /* Botón de pago */
    .btn-accent {
        background: linear-gradient(to right, #800020, #a81c1c);
        color: #ffffff !important; /* Color del texto blanco */
        font-weight: bold;
        border-radius: 0.5rem;
        padding: 0.75rem 1.5rem;
        font-size: 1.2rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-accent:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(168, 28, 28, 0.7);
        }

    .text-success {
        color: #4caf50 !important;
        font-weight: bold;
    }

    /* Animaciones de entrada */
    .animate-container {
        opacity: 0;
        animation: fadeInContainer 1s ease-in forwards;
    }

    .animate-title {
        opacity: 0;
        transform: translateY(-30px);
        animation: fadeInTitle 1s ease-out forwards;
    }

    .animate-table {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInTable 1s 0.5s ease-out forwards;
    }

    .animate-row {
        opacity: 0;
        transform: translateX(-30px);
        animation: fadeInRow 0.8s ease-out forwards;
    }

    .animate-total {
        opacity: 0;
        transform: scale(0.9);
        animation: fadeInTotal 1s 1s ease-out forwards;
    }

    .animate-empty {
        opacity: 0;
        transform: scale(0.9);
        animation: fadeInEmpty 1s 1.5s ease-out forwards;
    }

    /* Keyframes */
    @@keyframes fadeInContainer {
        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInTitle {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInTable {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInRow {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes fadeInTotal {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeInEmpty {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
