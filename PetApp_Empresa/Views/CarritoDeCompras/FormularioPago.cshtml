@{
    ViewData["Title"] = "Formulario de Pago";
}

<div class="container py-5">
    <!-- Título -->
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold futuristic-title">@ViewData["Title"]</h1>
        <p class="lead text-muted">Completa todos los campos necesarios para procesar tu pago de manera rápida y segura.</p>
    </div>

    <!-- Formulario en un solo cuadro -->
    <div class="futuristic-border p-5 mx-auto">
        <form asp-action="EnviarFormularioPago" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group mb-4">
                <label for="nombre" class="fw-bold text-white">Nombre:</label>
                <input type="text" class="form-control futuristic-input" id="nombre" name="nombre" placeholder="Escribe tu nombre" required />
            </div>

            <div class="form-group mb-4">
                <label for="apellido" class="fw-bold text-white">Apellido:</label>
                <input type="text" class="form-control futuristic-input" id="apellido" name="apellido" placeholder="Escribe tu apellido" required />
            </div>

            <div class="form-group mb-4">
                <label for="bancoDestino" class="fw-bold text-white">Banco de destino:</label>
                <select class="form-control futuristic-input" id="bancoDestino" name="bancoDestino" required>
                    <option value="" disabled selected>-- Seleccione un banco --</option>
                    <option value="Banco Nacional de Bolivia">Banco Nacional de Bolivia</option>
                    <option value="Banco Unión">Banco Unión</option>
                    <option value="Banco Mercantil Santa Cruz">Banco Mercantil Santa Cruz</option>
                    <option value="Banco Ganadero">Banco Ganadero</option>
                    <option value="Banco FIE">Banco FIE</option>
                    <option value="BancoSol">BancoSol</option>
                    <option value="Banco Bisa">Banco Bisa</option>
                    <option value="Banco de Crédito BCP">Banco de Crédito BCP</option>
                    <option value="Banco Fortaleza">Banco Fortaleza</option>
                </select>
            </div>

            <div class="form-group mb-4">
                <label for="numeroTransaccion" class="fw-bold text-white">Número de transacción:</label>
                <input type="text" class="form-control futuristic-input" id="numeroTransaccion" name="numeroTransaccion" placeholder="Ej. 123456" required />
            </div>

            <div class="form-group mb-4">
                <label for="comprobante" class="fw-bold text-white">Adjuntar comprobante:</label>
                <input type="file" class="form-control futuristic-input" id="comprobante" name="comprobante" accept="image/*" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn futuristic-btn">
                    <i class="fas fa-paper-plane me-2"></i>Enviar Pago
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #1a1a1a;
        color: #ffffff;
    }

    /* Título futurista */
    .futuristic-title {
        background: linear-gradient(to right, #800020, #a81c1c); /* Rojo guindo */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Contenedor del formulario */
    .futuristic-border {
        position: relative;
        max-width: 600px;
        background: linear-gradient(to right, #800020, #a81c1c); /* Rojo guindo */
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        margin: auto;
        overflow: hidden;
    }

    .futuristic-border::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 4px solid transparent;
        border-radius: 12px;
        background: linear-gradient(90deg, rgba(255, 255, 255, 0.4), transparent);
        animation: glowEffect 6s infinite linear; /* Animación completa cada 6 segundos */
        z-index: 1;
        pointer-events: none;
    }

    /* Input futurista */
    .futuristic-input {
        background-color: #2e2e2e;
        color: #ffffff;
        border: 2px solid #a81c1c;
        border-radius: 6px;
        padding: 10px;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s ease;
    }

    .futuristic-input:focus {
        border-color: #ffcc00;
    }

    /* Botón futurista */
    .futuristic-btn {
        background: linear-gradient(to right, #800020, #a81c1c); /* Rojo guindo */
        color: #ffffff !important; /* Texto blanco */
        border: none;
        font-weight: bold;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1.2rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .futuristic-btn:hover {
        transform: scale(1.1);
        box-shadow: 0px 8px 20px rgba(168, 28, 28, 0.5);
    }

    @@keyframes glowEffect {
        0% {
            transform: translateX(-100%);
        }
        80% {
            transform: translateX(100%);
        }
        100% {
            transform: translateX(100%);
        }
    }
</style>

<!-- Librerías necesarias -->
