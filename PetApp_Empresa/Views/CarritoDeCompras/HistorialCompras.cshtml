@model List<PetApp_Empresa.Models.Compra>

<h2>Historial de Compras</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Total</th>
                <th>Método de Pago</th>
                <th>Detalles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var compra in Model)
            {
                <tr>
                    <td>@compra.FechaCompra.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@compra.Total.ToString("C")</td>
                    <td>
                        @if (compra.Tarjeta != null)
                        {
                            <span>Tarjeta: **** **** **** @compra.Tarjeta.Numero.Substring(compra.Tarjeta.Numero.Length - 4)</span>
                        }
                        else if (compra.QR != null)
                        {
                            <span>QR</span>
                        }
                        else
                        {
                            <span class="text-danger">Desconocido</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-info btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#detalles-@compra.CompraId">
                            Ver Detalles
                        </button>
                    </td>
                </tr>
                <tr id="detalles-@compra.CompraId" class="collapse">
                    <td colspan="4">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unitario</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in compra.DetallesCompra)
                                {
                                    <tr>
                                        <td>@detalle.Accesorio?.Nombre</td>
                                        <td>@detalle.Cantidad</td>
                                        <td>@detalle.PrecioUnitario.ToString("C")</td>
                                        <td>@(detalle.Cantidad * detalle.PrecioUnitario).ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron compras registradas.</p>
}
