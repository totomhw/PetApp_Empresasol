@{
    ViewData["Title"] = "Formulario de Transacción Bancaria";
}

<h2>Formulario de Transacción Bancaria</h2>

<form asp-action="GuardarTransaccion" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" class="form-control" id="nombre" name="nombre" required />
    </div>

    <div class="form-group">
        <label for="apellido">Apellido:</label>
        <input type="text" class="form-control" id="apellido" name="apellido" required />
    </div>

    <div class="form-group">
        <label for="numeroTransaccion">Número de Transacción:</label>
        <input type="text" class="form-control" id="numeroTransaccion" name="numeroTransaccion" required />
    </div>

    <div class="form-group">
        <label for="bancoOrigen">Banco de Origen:</label>
        <select class="form-control" id="bancoOrigen" name="bancoOrigen" required>
            <option value="" disabled selected>-- Seleccione un banco --</option>
            @foreach (var banco in ViewBag.Bancos as string[])
            {
                <option value="@banco">@banco</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="comprobante">Adjuntar Comprobante:</label>
        <input type="file" class="form-control-file" id="comprobante" name="comprobante" accept="image/*" required />
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
