@model PetApp_Empresa.Models.Donacione

@{
    ViewData["Title"] = "Eliminar Donación";
}
<link rel="stylesheet" href="~/css/donaciones.css" />

<div class="donation-container">
    <h1 class="text-center titulo-negro mb-4">Eliminar Donación</h1>

    <h3 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta donación?</h3>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="donation-details animate__animated animate__fadeIn">
                <h4 class="text-center mb-3">Detalles de la Donación</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Monto</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Monto)</dd>

                    <dt class="col-sm-4">Fecha de Donación</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaDonacion)</dd>

                    <dt class="col-sm-4">Refugio</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Refugio.Nombre)</dd>

                    <dt class="col-sm-4">Usuario</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Usuario.Nombre)</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6 text-center">
            <form asp-action="Delete" class="d-inline-block">
                <input type="hidden" asp-for="DonacionId" />
                <button type="submit" class="btn btn-danger btn-lg btn-animated">Eliminar</button>
            </form>
            <a asp-action="Index" class="btn btn-save btn-back btn-animated ml-3">Regresar al listado</a>
        </div>
    </div>
</div>

<style>
    /* Diseño del contenedor */
    .donation-container {
        margin-top: 50px;
    }

    /* Título en negro */
    .titulo-negro {
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        color: black !important;
        text-align: center;
    }

    /* Detalles de la donación */
    .donation-details {
        background-color: var(--background-color); /* Fondo suave según el layout */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-out;
    }

    dl.row dt {
        font-weight: 600;
        color: var(--primary-color); /* Color del texto de las etiquetas */
    }

    dl.row dd {
        color: var(--text-color); /* Color del texto del contenido */
    }

    /* Botones */
    .btn-danger {
        background-color: #7A1E3D; /* Rojo del botón Eliminar */
        border-color: #7A1E3D;
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #5a142c;
            border-color: #5a142c;
        }

    .btn-save {
        background-color: #cccccc; /* Botón gris */
        color: black;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-save:hover {
            background-color: #aaaaaa;
        }

    /* Animaciones */
    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
