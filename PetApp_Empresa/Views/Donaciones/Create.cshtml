@model PetApp_Empresa.Models.Donacione

@{
    ViewData["Title"] = "Crear Donación";
}
<link rel="stylesheet" href="~/css/donaciones.css" />


<h1 class="text-center text-primary mb-4">Realizar Donación</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="RefugioId" class="form-label">Seleccionar Refugio</label>
                <select asp-for="RefugioId" class="form-select" asp-items="ViewBag.RefugioId">
                    <option value="">Seleccione un refugio...</option>
                </select>
                <span asp-validation-for="RefugioId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Monto" class="form-label">Monto de Donación</label>
                <input asp-for="Monto" class="form-control" placeholder="Ingrese el monto en Bs." />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success btn-lg">Donar</button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Regresar al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
