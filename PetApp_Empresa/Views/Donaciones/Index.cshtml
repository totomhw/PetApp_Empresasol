<div class="container py-5 animate-container">
    <!-- Título -->
    <div class="text-center mb-5 animate-title">
        <h1 class="display-4 fw-bold text-gradient-red">Donaciones Realizadas</h1>
        <p class="lead text-muted">Consulta y gestiona las donaciones realizadas a los refugios.</p>
    </div>

    <!-- Botón para realizar nueva donación -->
    <div class="text-center mb-5 animate-button">
        <a asp-action="Create" class="btn donation-btn-red">
            <i class="fas fa-donate me-2"></i><span class="text-white">¡Realiza una Nueva Donación!</span>
        </a>
    </div>

    <!-- Tabla de donaciones -->
    <div class="table-responsive animate-table">
        <table class="table futuristic-table text-center">
            <thead class="table-gradient text-white">
                <tr>
                    <th>Monto</th>
                    <th>Fecha de Donación</th>
                    <th>Refugio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle animate-row">
                        <td class="text-success fw-bold">@item.Monto.ToString("C")</td>
                        <td>@item.FechaDonacion?.ToString("dd/MM/yyyy")</td>
                        <td>@item.Refugio.Nombre</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.DonacionId" class="btn btn-sm btn-outline-warning me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.DonacionId" class="btn btn-sm btn-outline-info me-2">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.DonacionId" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    /* Título con degradado rojo guindo */
    .text-gradient-red {
        background: linear-gradient(to right, #800020, #a81c1c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: glowingTitle 1.5s infinite alternate;
    }

    @@keyframes glowingTitle {
        from {
            filter: brightness(1);
        }
        to {
            filter: brightness(1.5);
        }
    }

    /* Animación de entrada */
    .animate-container {
        opacity: 0;
        animation: fadeInContainer 1s ease-in forwards;
    }

    .animate-title {
        opacity: 0;
        transform: translateY(-30px);
        animation: fadeInTitle 1s ease-out forwards;
    }

    .animate-button {
        opacity: 0;
        transform: scale(0.9);
        animation: fadeInButton 1s 0.5s ease-out forwards;
    }

    .animate-table {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInTable 1s 1s ease-out forwards;
    }

    .animate-row {
        opacity: 0;
        transform: translateX(-30px);
        animation: fadeInRow 0.8s ease-out forwards;
    }

    @@keyframes fadeInContainer {
        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInTitle {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInButton {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeInTable {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInRow {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Botón con degradado rojo guindo */
    .donation-btn-red {
        background: linear-gradient(to right, #800020, #a81c1c);
        color: #ffffff !important;
        font-size: 1.2rem;
        font-weight: bold;
        border: 2px solid #6a0017;
        padding: 12px 24px;
        border-radius: 0.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
    }

    .donation-btn-red:hover {
        background: linear-gradient(to right, #a81c1c, #800020);
        box-shadow: 0px 8px 20px rgba(128, 0, 32, 0.5);
        transform: scale(1.1);
    }

    /* Tabla futurista */
    .futuristic-table {
        border-radius: 12px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .futuristic-table th, .futuristic-table td {
        vertical-align: middle;
    }

    .table-gradient {
        background: linear-gradient(to right, #800020, #a81c1c);
    }

    .futuristic-table tbody tr:hover {
        background-color: rgba(128, 0, 32, 0.1);
        cursor: pointer;
    }

    /* Botones de acciones */
    .btn-outline-warning:hover {
        background: #ffc107;
        color: #fff;
    }

    .btn-outline-info:hover {
        background: #17a2b8;
        color: #fff;
    }

    .btn-outline-danger:hover {
        background: #dc3545;
        color: #fff;
    }
</style>

