@model IEnumerable<PetApp_Empresa.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UsuarioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UsuarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UsuarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    /* Estilo general */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7; /* Fondo claro */
        margin: 0;
        padding: 0;
        color: #333;
    }

    /* Estilo del título */
    h1 {
        background-color: #BA0C2F; /* Rojo Univalle */
        color: white;
        text-align: center;
        padding: 15px;
        margin: 0 0 20px;
        font-size: 2rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    /* Contenedor */
    .container {
        margin: 20px auto;
        max-width: 80%;
        background-color: black;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    /* Tabla */
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 16px;
        text-align: left;
    }

    thead {
        background-color: #BA0C2F; /* Rojo Univalle */
        color: black;
        text-transform: uppercase;
    }

    th, td {
        padding: 10px 15px;
        border: 1px solid #ddd;
        text-align: left;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f9f9; /* Fondo claro para filas alternas */
    }

    tbody tr:hover {
        background-color: #f2f2f2; /* Resalte al pasar el ratón */
    }

    td {
        vertical-align: middle; /* Alinear texto verticalmente */
    }

    /* Links */
    a {
        color: #BA0C2F; /* Rojo Univalle */
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Botón Crear Nuevo */
    .new-user {
        display: inline-block;
        background-color: #007BFF; /* Azul */
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 1rem;
        text-transform: uppercase;
        margin-bottom: 20px;
        text-align: center;
    }

        .new-user:hover {
            background-color: #0056b3;
        }


</style>