@model PetApp_Empresa.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<div class="usuario-create-container">
    <h1 class="titulo-negro text-center">Crear Usuario</h1>

    <div class="usuario-create">
        <h4 class="text-center mb-4">Crear Nuevo Usuario</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Contraseña</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Crear" class="btn btn-save btn-animated" />
            </div>
        </form>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-back btn-animated">Volver al Listado</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Contenedor principal */
    .usuario-create-container {
        margin-top: 50px;
    }

    /* Estilo del título */
    .titulo-negro {
        font-family: 'Arial', sans-serif;
        font-size: 2rem;
        color: black !important;
        margin-bottom: 20px;
    }

    /* Estilos del formulario de creación de usuario */
    .usuario-create {
        background-color: var(--background-color);
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-out;
        max-width: 400px;
        margin: 0 auto;
    }

    .usuario-create .form-group label {
        font-weight: bold;
        color: var(--primary-color);
    }

    .usuario-create .form-group input {
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    .usuario-create .form-group span {
        color: red;
    }

    /* Botón de "Crear" */
    .btn-save {
        background-color: #7A1E3D; /* Rojo para "Crear" */
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-save:hover {
        background-color: #c82333;
    }

    /* Botón de Volver al listado */
    .btn-back {
        background-color: #cccccc; /* Gris para "Volver al listado" */
        color: black;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-back:hover {
        background-color: #aaaaaa;
    }

    /* Animación */
    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
