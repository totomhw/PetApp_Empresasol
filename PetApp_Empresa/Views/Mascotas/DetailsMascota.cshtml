@model PetApp_Empresa.Models.Mascota

@{
    ViewData["Title"] = "Detalles de la Mascota";
}

<div class="mascota-detalles-container">
    <h1 class="titulo-negro text-center">Detalles de @Model.Nombre</h1>

    <div class="mascota-detalles">
        <h4 class="text-center mb-4">Información de la Mascota</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Raza</dt>
            <dd class="col-sm-9">@Model.Raza</dd>

            <dt class="col-sm-3">Edad</dt>
            <dd class="col-sm-9">@Model.Edad años</dd>

            <dt class="col-sm-3">Sexo</dt>
            <dd class="col-sm-9">@Model.Sexo</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                <span class="estado @((Model.EstadoAdopcion == "Disponible") ? "text-success" : "text-danger")">
                    @Model.EstadoAdopcion
                </span>
            </dd>
        </dl>

        @if (Model.EstadoAdopcion == "Disponible")
        {
            <div class="text-center mt-4">
                <a asp-action="SolicitarAdopcion" asp-route-id="@Model.MascotaId" class="btn btn-save btn-animated">Solicitar Adopción</a>
            </div>
        }
        else
        {
            <p class="text-center text-muted mt-4">Esta mascota ya ha sido adoptada.</p>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-action="VistaMascota" class="btn btn-back btn-animated">Volver a la lista</a>
    </div>
</div>

<style>
    /* Contenedor principal */
    .mascota-detalles-container {
        margin-top: 50px;
    }

    /* Estilo del título */
    .titulo-negro {
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        color: black !important;
        margin-bottom: 30px;
    }

    /* Estilos de los detalles de la mascota */
    .mascota-detalles {
        background-color: var(--background-color);
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-out;
    }

    .mascota-detalles dl dt {
        font-weight: 600;
        color: var(--primary-color);
    }

    .mascota-detalles dl dd {
        color: var(--text-color);
    }

    .estado.text-success {
        font-weight: bold;
        color: #28a745; /* Verde para "Disponible" */
    }

    .estado.text-danger {
        font-weight: bold;
        color: #dc3545; /* Rojo para "Adoptada" */
    }

    /* Botón de "Solicitar Adopción" */
    .btn-save {
        background-color: #7A1E3D; /* Rojo para "Solicitar Adopción" */
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-save:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    /* Botón de "Volver a la lista" */
    .btn-back {
        background-color: #cccccc; /* Gris */
        color: black;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-back:hover {
        background-color: #aaaaaa;
    }

    /* Animaciones */
    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
