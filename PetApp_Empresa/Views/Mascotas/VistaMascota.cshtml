@model IEnumerable<PetApp_Empresa.Models.Mascota>

<div class="container-fluid py-5">
    <!-- Título con animación -->
    <div class="text-center mb-4 animate-title">
        <h1 class="display-4 fw-bold title-gradient">Mascotas Disponibles para Adopción</h1>
        <p class="lead text-muted">Encuentra la mascota perfecta para adoptar y brindarle un hogar lleno de amor.</p>
    </div>

    <!-- Formulario para filtrar -->
    <div class="text-center mb-4">
        <form method="get" asp-action="VistaMascota" class="d-flex justify-content-center align-items-center gap-3">
            <input type="number" name="edadFiltro" id="edadFiltro" class="form-control filter-input" placeholder="Edad" />
            <button type="submit" class="btn btn-filter">Aplicar Filtro</button>
        </form>
    </div>

    <!-- Tarjetas de mascotas -->
    <div class="row justify-content-center gap-4 animate-cards">
        @foreach (var mascota in Model.OrderBy(m => m.EstadoAdopcion == "Adoptado"))
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mascota-card @(mascota.EstadoAdopcion == "Adoptado" ? "adopted-card" : "")">
                <img src="@mascota.ImagenUrl" alt="@mascota.Nombre" class="mascota-img rounded-top" />
                <div class="card-body">
                    <h2 class="card-title text-center">@mascota.Nombre</h2>
                    <p class="card-text"><strong>Raza:</strong> @mascota.Raza</p>
                    <p class="card-text"><strong>Edad:</strong> @mascota.Edad años</p>
                    <p class="card-text"><strong>Sexo:</strong> @mascota.Sexo</p>

                    @if (mascota.EstadoAdopcion == "En Proceso")
                    {
                        <p class="text-info">La adopción de esta mascota está en proceso.</p>
                    }
                    else
                    {
                        <a href="@Url.Action("DetailsMascota", new { id = mascota.MascotaId })" class="btn btn-adoptar">Adoptar</a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Título gradiente con animación */
    .title-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: glowingTitle 1.5s infinite alternate;
    }

    @@keyframes glowingTitle {
        from {
            filter: brightness(1);
        }

        to {
            filter: brightness(1.5);
        }
    }

    /* Botón de filtro */
    .btn-filter {
        background: linear-gradient(to right, #343a40, #6c757d);
        color: #ffffff;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        padding: 10px 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-filter:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        }

    /* Entrada de filtro */
    .filter-input {
        width: 200px;
        border: 2px solid #6c757d;
        border-radius: 6px;
        padding: 8px;
    }

        .filter-input:focus {
            border-color: #a81c1c;
            outline: none;
        }

    /* Tarjetas de mascotas */
    .mascota-card {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        position: relative;
        animation: fadeIn 1s ease-in-out;
    }

        .mascota-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    /* Imagen de la tarjeta */
    .mascota-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-bottom: 3px solid #a81c1c;
    }

    /* Contenido de la tarjeta */
    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
        font-weight: bold;
        color: #343a40;
    }

    .card-text {
        font-size: 0.9rem;
        margin-bottom: 8px;
        color: #6c757d;
    }

    /* Botón Adoptar */
    .btn-adoptar {
        display: block;
        width: 100%;
        background: linear-gradient(to right, #a81c1c, #800020);
        color: #ffffff !important; /* Texto blanco */
        text-align: center;
        padding: 10px 0;
        font-weight: bold;
        border-radius: 6px;
        text-decoration: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-adoptar:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(168, 28, 28, 0.3);
        }

    /* Tarjetas adoptadas */
    .adopted-card {
        background: #f8d7da;
        border: 2px solid #a81c1c;
    }

    /* Animación de entrada */
    .animate-title {
        opacity: 0;
        transform: translateY(-50px);
        animation: fadeInDown 1.2s forwards ease-out;
    }

    @@keyframes fadeInDown {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-cards {
        opacity: 0;
        animation: fadeIn 1.5s forwards ease-in-out;
    }

    @@keyframes fadeIn {
        to {
            opacity: 1;
        }
    }
</style>

<!-- Librerías necesarias -->
