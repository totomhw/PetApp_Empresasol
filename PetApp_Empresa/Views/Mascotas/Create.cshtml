@model PetApp_Empresa.Models.Mascota

<h2>Crear Nueva Mascota</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    @* Nombre *@
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    @* Raza *@
    <div class="form-group">
        <label asp-for="Raza" class="control-label"></label>
        <input asp-for="Raza" class="form-control" />
        <span asp-validation-for="Raza" class="text-danger"></span>
    </div>

    @* Sexo *@
    <div class="form-group">
        <label asp-for="Sexo" class="control-label">Sexo</label>
        <select asp-for="Sexo" class="form-control">
            <option value="">Seleccione...</option>
            <option value="Macho">Macho</option>
            <option value="Hembra">Hembra</option>
        </select>
        <span asp-validation-for="Sexo" class="text-danger"></span>
    </div>

    @* Descripción *@
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    @* Edad *@
    <div class="form-group">
        <label asp-for="Edad" class="control-label"></label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    @* Refugio *@
    <div class="form-group">
        <label asp-for="RefugioId" class="control-label">Refugio</label>
        <select asp-for="RefugioId" class="form-control" asp-items="ViewBag.RefugioId"></select>
        <span asp-validation-for="RefugioId" class="text-danger"></span>
    </div>

    @* Imagen (Subida de archivo) *@
    <div class="form-group">
        <label for="ImagenArchivo" class="control-label">Imagen</label>
        <input id="ImagenArchivo" name="ImagenArchivo" type="file" class="form-control" />
        <span class="text-danger">
            @ViewData["ErrorImagen"] <!-- Mensaje de error en caso de problemas con la imagen -->
        </span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<style>
    /* General styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f8f8;
        margin: 0;
        padding: 0;
        color: #333;
    }

    /* Título de la página */
    h1 {
        background-color: #BA0C2F; /* Rojo institucional de Univalle */
        color: white;
        text-align: center;
        padding: 20px;
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    h4 {
        color: #BA0C2F; /* Rojo institucional */
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    /* Contenedor del formulario */
    .row {
        margin: 0 auto;
        max-width: 600px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    /* Etiquetas y entradas de formulario */
    label {
        color: #333;
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    input,
    select {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        box-sizing: border-box;
    }

    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        box-sizing: border-box;
        resize: none;
    }

    /* Botón principal */
    .btn-primary {
        background-color: #BA0C2F;
        color: white;
        text-transform: uppercase;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #A50A29;
        }

    /* Enlace de navegación */
    a {
        color: #BA0C2F; 
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
        margin-top: 10px;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Validación de errores */
    .text-danger {
        color: #A50A29; /* Un rojo más oscuro para mensajes de error */
        font-size: 0.9rem;
        margin-top: -15px;
        display: block;
    }
</style>

