@model IEnumerable<PetApp_Empresa.Models.Mascota>

<div class="container py-5 animate-view">
    <!-- Título -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold title-gradient">Mis Mascotas</h1>
        <p class="lead text-muted">Administra todas tus mascotas registradas y gestiona su estado de adopción.</p>
    </div>

    <!-- Botón Crear Nueva Mascota -->
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-create-mascota">
            <i class="fas fa-plus-circle me-2"></i>Crear Nueva Mascota
        </a>
    </div>

    <!-- Tabla de mascotas -->
    <div class="card shadow-sm p-4 table-card">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-header">
                <tr>
                    <th>Nombre</th>
                    <th>Raza</th>
                    <th>Sexo</th>
                    <th>Descripción</th>
                    <th>Estado Adopción</th>
                    <th>Edad</th>
                    <th>Imagen</th>
                    <th>Refugio</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.EstadoAdopcion == "Adoptado" ? "row-adopted" : "row-available")">
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Raza)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sexo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td>
                            <span class="badge @(item.EstadoAdopcion == "Adoptado" ? "bg-success" : "bg-warning")">
                                @Html.DisplayFor(modelItem => item.EstadoAdopcion)
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Edad) años</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImagenUrl))
                            {
                                <img src="@item.ImagenUrl" alt="Imagen de @item.Nombre" class="rounded mascota-image" />
                            }
                            else
                            {
                                <span class="text-muted">No disponible</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Refugio.Nombre)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.MascotaId" class="btn btn-edit">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="DetailsMascota" asp-route-id="@item.MascotaId" class="btn btn-details">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MascotaId" class="btn btn-delete">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted">No hay mascotas registradas.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Animación de entrada para toda la vista */
    .animate-view {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInView 1s ease-in-out forwards;
    }

    @@keyframes fadeInView {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Título con gradiente */
    .title-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: glowingTitle 1.5s infinite alternate;
    }

    @@keyframes glowingTitle {
        from {
            filter: brightness(1);
        }
        to {
            filter: brightness(1.5);
        }
    }

    /* Botón Crear Nueva Mascota */
    .btn-create-mascota {
        background: linear-gradient(45deg, #a81c1c, #800020);
        color: #ffffff !important;
        font-size: 1.1rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-create-mascota:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(168, 28, 28, 0.5);
    }

    /* Tabla */
    .table-card {
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
    }

    .table-header {
        background: linear-gradient(45deg, #800020, #a81c1c);
        color: #ffffff;
        font-weight: bold;
    }

    .row-adopted {
        background-color: rgba(168, 28, 28, 0.1);
    }

    .row-available:hover {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .mascota-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 2px solid #a81c1c;
        border-radius: 8px;
    }

    /* Botones de acción */
    .btn {
        font-size: 0.9rem;
        font-weight: bold;
        padding: 8px 15px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: #a81c1c !important;
        color: #ffffff !important;
        border: none;
    }

    .btn-edit:hover {
        background-color: #800020 !important;
    }

    .btn-details {
        background-color: #0056b3 !important;
        color: #ffffff !important;
        border: none;
    }

    .btn-details:hover {
        background-color: #003d80 !important;
    }

    .btn-delete {
        background-color: #e63946 !important;
        color: #ffffff !important;
        border: none;
    }

    .btn-delete:hover {
        background-color: #b71c1c !important;
    }
</style>

