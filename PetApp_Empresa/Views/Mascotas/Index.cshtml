@model IEnumerable<PetApp_Empresa.Models.Mascota>

@{
    ViewData["Title"] = "Mis Mascotas";
}

<h1>Mis Mascotas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Mascota</a>
</p>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Raza)</th>
                <th>@Html.DisplayNameFor(model => model.Sexo)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.EstadoAdopcion)</th>
                <th>@Html.DisplayNameFor(model => model.Edad)</th>
                <th>Imagen</th>
                <th>Refugio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.EstadoAdopcion == "Adoptado" ? "table-danger" : "")">
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Raza)</td>
                    <td>@Html.DisplayFor(modelItem => item.Sexo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.EstadoAdopcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagenUrl))
                        {
                            <img src="@item.ImagenUrl" alt="Imagen de @item.Nombre" width="100" height="100" />
                        }
                        else
                        {
                            <span>No disponible</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Refugio.Nombre)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MascotaId" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="DetailsMascota" asp-route-id="@item.MascotaId" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.MascotaId" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* General styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 0;
        color: #333;
    }

    h1 {
        background-color: #BA0C2F;
        color: white;
        text-align: center;
        padding: 15px;
        margin-bottom: 20px;
        font-size: 2rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    .container {
        margin: 20px auto;
        max-width: 90%;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1rem;
        text-align: left;
    }

    thead {
        background-color: #BA0C2F;
        color: white;
        text-transform: uppercase;
    }

    th, td {
        padding: 10px 15px;
        border: 1px solid #ddd;
        text-align: left;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tbody tr:hover {
        background-color: #f2f2f2;
    }

    .table-danger {
        background-color: #f8d7da;
    }

    /* Button styles */
    a.btn {
        text-transform: uppercase;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: #BA0C2F; /* Rojo */
        color: white;
        border: 1px solid #BA0C2F; /* Borde ligeramente más oscuro */
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-warning {
        background-color: #FFC107;
        color: black;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-info {
        background-color: #17A2B8;
        color: white;
    }

        .btn-info:hover {
            background-color: #117a8b;
        }

    .btn-danger {
        background-color: #DC3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #bd2130;
        }

    thead th {
        color: black; /* Cambiar el texto a negro */
        font-weight: bold; /* Asegurar que se vea más resaltado */
    }
    /* Estilo del texto en las celdas del cuerpo de la tabla */
    tbody td {
        color: black; /* Texto en negro */
    }
</style>
