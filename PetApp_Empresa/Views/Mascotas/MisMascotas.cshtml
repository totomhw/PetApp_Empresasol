@model IEnumerable<PetApp_Empresa.Models.Mascota>

<div class="container-fluid py-5 animate-view">
    <!-- Título estilizado -->
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold title-gradient">Mis Mascotas</h1>
        <p class="lead text-muted">Explora y administra las mascotas registradas en nuestra plataforma.</p>
    </div>

    <!-- Botón Crear Nuevo -->
    <div class="text-end mb-4">
        <a asp-action="Create" class="btn create-btn">
            <i class="fas fa-plus-circle me-2"></i>Agregar Mascota
        </a>
    </div>

    <!-- Tabla estilizada -->
    <div class="table-responsive futuristic-table">
        <table class="table table-hover align-middle">
            <thead class="table-header">
                <tr>
                    <th>Nombre</th>
                    <th>Raza</th>
                    <th>Edad</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mascota in Model)
                {
                    <tr class="table-row">
                        <td>@mascota.Nombre</td>
                        <td>@mascota.Raza</td>
                        <td>@mascota.Edad años</td>
                        <td>@mascota.EstadoAdopcion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Animación de entrada para toda la vista */
    .animate-view {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInView 1s ease-in-out forwards;
    }

    @@keyframes fadeInView {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Título estilizado */
    .title-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Botón Crear Nuevo */
    .create-btn {
        background: linear-gradient(to right, #800020, #a81c1c);
        color: #ffffff !important; /* Texto blanco forzado */
        border: none;
        font-weight: bold;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .create-btn:hover {
        transform: scale(1.1);
        box-shadow: 0px 8px 20px rgba(168, 28, 28, 0.5);
    }

    /* Contenedor de tabla futurista */
    .futuristic-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
    }

    /* Encabezado de tabla */
    .table-header {
        background: linear-gradient(to right, #800020, #a81c1c);
        color: #ffffff;
        font-size: 1rem;
        font-weight: bold;
    }

    /* Filas de la tabla */
    .table-row:hover {
        background-color: rgba(168, 28, 28, 0.1);
        animation: rowGlow 1s infinite alternate;
    }

    /* Animación de resplandor para filas */
    @@keyframes rowGlow {
        0% {
            box-shadow: none;
        }
        100% {
            box-shadow: 0px 6px 15px rgba(168, 28, 28, 0.2);
        }
    }

    /* Estilo de celdas */
    .table td {
        padding: 15px;
        font-size: 1rem;
        color: #343a40;
    }

    .table th {
        padding: 15px;
        text-align: center;
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
