@model IEnumerable<PetApp_Empresa.Models.Accesorio>

@{
    ViewData["Title"] = "Gestion de Accesorios";
}

<div class="container py-5 animate-page">
    <!-- Título -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient animate-title">@ViewData["Title"]</h1>
        <p class="lead text-muted animate-subtitle">
            Gestiona, edita y explora los accesorios disponibles en nuestra plataforma de manera intuitiva.
        </p>
    </div>

    <!-- Botón Crear Nuevo -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="text-muted mb-0 animate-fade-right">Administra los elementos de tu inventario en esta vista.</p>
        <a asp-action="Create" class="btn btn-create shadow-sm d-flex align-items-center animate-zoom">
            <i class="fas fa-plus me-2"></i>Crear Nuevo
        </a>
    </div>

    <!-- Tabla de accesorios -->
    <div class="table-responsive animate-fade-up">
        <table class="table table-hover shadow-sm border-0">
            <thead class="table-gradient text-white">
                <tr>
                    <th>Imagen</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.Precio)</th>
                    <th>@Html.DisplayNameFor(model => model.Vendedor)</th>
                    <th>@Html.DisplayNameFor(model => model.CantidadDisponible)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle animate-row">
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImagenUrl))
                            {
                                <img src="@item.ImagenUrl" alt="Imagen del accesorio" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin imagen</span>
                            }
                        </td>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td class="text-success fw-semibold">@Html.DisplayFor(modelItem => item.Precio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Vendedor.UsuarioId)</td>
                        <td>
                            <span class="badge @(item.CantidadDisponible > 0 ? "bg-success" : "bg-danger")">
                                @Html.DisplayFor(modelItem => item.CantidadDisponible)
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.AccesorioId" class="btn btn-sm btn-outline-primary me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.AccesorioId" class="btn btn-sm btn-outline-info me-2">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.AccesorioId" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    /* Gradiente para títulos */
    .text-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Gradiente para encabezado de la tabla */
    .table-gradient {
        background: linear-gradient(to right, #800020, #a81c1c);
    }

    .btn-create {
        background: linear-gradient(45deg, #a81c1c, #800020);
        color: #ffffff !important;
        font-weight: bold;
        border-radius: 8px;
        padding: 10px 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-create:hover {
            transform: scale(1.05);
            box-shadow: 0px 8px 20px rgba(168, 28, 28, 0.5);
        }

    .table {
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(168, 28, 28, 0.1);
        cursor: pointer;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
    }

    .img-thumbnail {
        border-radius: 8px;
        object-fit: cover;
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
