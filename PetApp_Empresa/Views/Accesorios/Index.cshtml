@model IEnumerable<PetApp_Empresa.Models.Accesorio>

@{
    ViewData["Title"] = "Tienda de Accesorios";
}

<div class="container py-5 animate-page">
    <!-- Título -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient animate-title">@ViewData["Title"]</h1>
        <p class="lead text-muted animate-subtitle">
            Gestiona, edita y explora los accesorios disponibles en nuestra plataforma de manera intuitiva.
        </p>
    </div>

    <!-- Botón Crear Nuevo -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="text-muted mb-0 animate-fade-right">Administra los elementos de tu inventario en esta vista.</p>
        <a asp-action="Create" class="btn btn-primary shadow-sm d-flex align-items-center animate-zoom">
            <i class="fas fa-plus me-2"></i>Crear Nuevo
        </a>
    </div>

    <!-- Tabla de accesorios -->
    <div class="table-responsive animate-fade-up">
        <table class="table table-hover shadow-sm border-0">
            <thead class="table-gradient text-white">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.Precio)</th>
                    <th>@Html.DisplayNameFor(model => model.Vendedor)</th>
                    <th>@Html.DisplayNameFor(model => model.CantidadDisponible)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle animate-row">
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td class="text-success fw-semibold">@Html.DisplayFor(modelItem => item.Precio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Vendedor.UsuarioId)</td>
                        <td>
                            <span class="badge @(item.CantidadDisponible > 0 ? "bg-success" : "bg-danger")">
                                @Html.DisplayFor(modelItem => item.CantidadDisponible)
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.AccesorioId" class="btn btn-sm btn-outline-primary me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.AccesorioId" class="btn btn-sm btn-outline-info me-2">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.AccesorioId" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    /* Gradiente para títulos */
    .text-gradient {
        background: linear-gradient(to right, #007bff, #0056b3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Gradiente para encabezado de la tabla */
    .table-gradient {
        background: linear-gradient(to right, #007bff, #0056b3);
    }

    .btn-primary {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-weight: bold;
        border-radius: 0.5rem;
    }

    .table {
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
        cursor: pointer;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
    }

    /* Animaciones */
    .animate-page {
        opacity: 0;
        animation: fadeInPage 1s forwards ease-out;
    }

    .animate-title {
        opacity: 0;
        transform: translateY(-50px) rotateX(10deg);
        animation: fadeInRotateDown 1.2s forwards ease-out;
    }

    .animate-subtitle {
        opacity: 0;
        transform: translateY(-20px) scale(0.9);
        animation: fadeInScale 1.2s 0.4s forwards ease-out;
    }

    .animate-zoom {
        opacity: 0;
        transform: scale(0.8);
        animation: zoomIn 1s 0.8s forwards ease-out;
    }

    .animate-fade-up {
        opacity: 0;
        transform: translateY(50px);
        animation: fadeUp 1s 0.6s forwards ease-out;
    }

    .animate-fade-right {
        opacity: 0;
        transform: translateX(-50px);
        animation: fadeRight 1s 0.4s forwards ease-out;
    }

    .animate-row {
        opacity: 0;
        transform: translateY(20px) rotateX(5deg);
        animation: rowFadeIn 0.8s forwards ease-out;
    }

    .animate-row:nth-child(odd) {
        animation-delay: 0.3s;
    }

    .animate-row:nth-child(even) {
        animation-delay: 0.5s;
    }

    @@keyframes fadeInPage {
        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInRotateDown {
        to {
            opacity: 1;
            transform: translateY(0) rotateX(0);
        }
    }

    @@keyframes fadeInScale {
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @@keyframes zoomIn {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeRight {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes rowFadeIn {
        to {
            opacity: 1;
            transform: translateY(0) rotateX(0);
        }
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
