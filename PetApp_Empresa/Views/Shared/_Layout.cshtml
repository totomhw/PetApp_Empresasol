<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetApp_Empresa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    @if (ViewData["HideLayout"] == null || !(bool)ViewData["HideLayout"])
    {
        <header>
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <!-- Título AdoptIt -->
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            string dashboardAction = "Index"; // Valor por defecto
                            if (User.IsInRole("Admin"))
                            {
                                dashboardAction = "DashboardAdmin";
                            }
                            else if (User.IsInRole("Cliente"))
                            {
                                dashboardAction = "DashboardCliente";
                            }
                            else if (User.IsInRole("Refugio"))
                            {
                                dashboardAction = "DashboardRefugio";
                            }
                            else if (User.IsInRole("Vendedor"))
                            {
                                dashboardAction = "DashboardVendedor";
                            }

                            <a class="navbar-brand ms-2" asp-area="" asp-controller="Home" asp-action="@dashboardAction">AdoptIt</a>
                        }
                        else
                        {
                            <a class="navbar-brand ms-2" asp-area="" asp-controller="Home" asp-action="Index">AdoptIt</a>
                        }
                    </div>

                    <!-- Botón de cerrar sesión -->
                    <div class="d-flex align-items-center ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light me-2">Cerrar sesión</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-light me-2" asp-controller="Auth" asp-action="Login">Iniciar sesión</a>
                        }
                    </div>
                </div>
            </nav>
        </header>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar">
                <ul class="nav flex-column">
                    <!-- Menú Principal -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Usuarios">
                                <i class="fas fa-users"></i> Menú Principal
                            </a>
                        </li>
                    }
                    <!-- Gestión de Refugios -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Refugio"))
                    {
                        <li class="nav-item section-title">Gestión de Refugios</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mascotas" asp-action="VistaMascota">
                                <i class="fas fa-eye"></i> Vista Mascota
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mascotas" asp-action="Index">
                                <i class="fas fa-list"></i> Mascotas General
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mascotas" asp-action="MisMascotas">
                                <i class="fas fa-paw"></i> Mis Mascotas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mascotas" asp-action="MisDonaciones">
                                <i class="fas fa-donate"></i> Mis Donaciones
                            </a>
                        </li>
                    }
                    <!-- Gestión de Accesorios -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Vendedor"))
                    {
                        <li class="nav-item section-title">Gestión de Accesorios</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Accesorios" asp-action="Index">
                                <i class="fas fa-box"></i> Accesorios
                            </a>
                        </li>
                    }
                </ul>
            </div>




        }

        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
