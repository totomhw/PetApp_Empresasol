@model PetApp_Empresa.Models.Refugio

@{
    ViewData["Title"] = "Delete";
}

<div class="main-content">
    <!-- Contenedor externo -->
    <div class="page-container">
        <!-- Contenedor general -->
        <div class="outer-container">
            <h1>Delete Refugio</h1>
            <h3>Are you sure you want to delete this?</h3>
            <div class="details-box">
                <h4>Refugio Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Direccion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Usuario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Usuario.Email)
                    </dd>
                </dl>
                <div class="btn-container">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="RefugioId" />
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Contenedor principal de la página */
.main-content {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #f8f9fa; /* Fondo general */
}

/* Contenedor externo (envoltura principal) */
.page-container {
    width: 100%; /* Ancho completo */
    max-width: 1200px; /* Ancho máximo para evitar demasiado ancho */
    padding: 20px;
    margin: 0 auto; /* Centramos el contenedor */
    background-color: #eaeaea; /* Fondo claro del contenedor externo */
    border-radius: 16px; /* Bordes redondeados */
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); /* Sombra para destacar */
}

/* Contenedor general con borde izquierdo destacado */
.outer-container {
    position: relative; /* Necesario para el borde decorativo */
    padding: 20px 30px;
    border-radius: 16px;
    background-color: #fff; /* Fondo blanco */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra */
    max-width: 600px; /* Ancho máximo */
    width: 90%; /* Ancho responsivo */
    text-align: center;
    overflow: hidden; /* Asegura que el borde no desborde */
}

/* Borde decorativo a la izquierda */
.outer-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 10px;
    height: 100%;
    background-color: #7A1E3D; /* Color del borde lateral */
    border-radius: 16px 0 0 16px; /* Bordes redondeados solo a la izquierda */
}

/* Caja de detalles */
.details-box {
    background-color: #fff;
    padding: 30px;
    border-radius: 12px;
    text-align: left; /* Alinear texto a la izquierda */
}

/* Título principal */
h1 {
    font-size: 1.8rem;
    color: #333;
    margin-bottom: 20px;
}

/* Subtítulos y detalles */
h3 {
    font-size: 1.2rem;
    color: #555;
    margin-bottom: 15px;
}

/* Lista de detalles */
dl {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 20px;
}

dt {
    font-weight: bold;
    color: #555;
    margin-top: 10px;
}

dd {
    color: #333;
    margin-left: 10px;
}

/* Contenedor de botones */
.btn-container {
    margin-top: 20px;
    display: flex;
    justify-content: space-around; /* Espaciado uniforme */
    gap: 15px; /* Espacio entre botones */
}

/* Botones */
.btn {
    font-size: 1rem;
    padding: 10px 20px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

/* Botón primario */
.btn-primary {
    background-color: #7A1E3D;
    color: #fff;
}

.btn-primary:hover {
    background-color: #5B152E;
    transform: translateY(-2px);
}

.btn-primary:active {
    background-color: #9e2a47;
    transform: translateY(2px);
}

/* Botón secundario */
.btn-secondary {
    background-color: #6c757d;
    color: #fff;
}

.btn-secondary:hover {
    background-color: #5a6268;
    transform: translateY(-2px);
}

/* Responsividad para pantallas pequeñas */
@@media (max-width: 768px) {
    .details-box {
        padding: 20px;
    }

    h1 {
        font-size: 1.6rem;
    }

    dl {
        font-size: 1rem;
    }

    .btn {
        width: 100%;
    }
}
</style>
