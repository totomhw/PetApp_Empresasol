@model IEnumerable<PetApp_Empresa.Models.Refugio>

<div class="container-fluid py-5">
    <!-- Título estilizado -->
    <div class="text-center mb-4 animate-title">
        <h1 class="display-4 fw-bold title-gradient">Lista de Refugios</h1>
        <p class="lead text-muted animate-subtitle">
            Explora y administra los refugios registrados en nuestra plataforma.
        </p>
    </div>

    <!-- Botón Crear Nuevo -->
    <div class="text-end mb-4 animate-button">
        <a asp-action="Create" class="btn create-btn">
            <i class="fas fa-plus-circle me-2"></i>Agregar Refugio
        </a>
    </div>

    <!-- Tabla estilizada -->
    <div class="table-responsive futuristic-table animate-table">
        <table class="table table-hover align-middle">
            <thead class="table-header animate-table-header">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-row animate-row">
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.Email)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.RefugioId" class="btn btn-warning btn-sm me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.RefugioId" class="btn btn-info btn-sm me-2">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.RefugioId" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Título estilizado */
    .title-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Botón Crear Nuevo */
    .create-btn {
        background: linear-gradient(to right, #800020, #a81c1c);
        color: #ffffff !important;
        border: none;
        font-weight: bold;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .create-btn:hover {
            transform: scale(1.1);
            box-shadow: 0px 8px 20px rgba(168, 28, 28, 0.5);
        }

    /* Contenedor de tabla futurista */
    .futuristic-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
    }

    /* Encabezado de tabla */
    .table-header {
        background: linear-gradient(to right, #800020, #a81c1c);
        color: #ffffff;
        font-size: 1rem;
        font-weight: bold;
    }

    /* Filas de la tabla */
    .table-row:hover {
        background-color: rgba(168, 28, 28, 0.1);
    }

    /* Estilo de celdas */
    .table td {
        padding: 15px;
        font-size: 1rem;
        color: #343a40;
    }

    .table th {
        padding: 15px;
        text-align: center;
    }

    /* Animaciones */
    .animate-title {
        opacity: 0;
        transform: translateY(-30px);
        animation: fadeInTitle 1s forwards ease-out;
    }

    .animate-subtitle {
        opacity: 0;
        transform: translateY(-20px);
        animation: fadeInSubtitle 1s 0.5s forwards ease-out;
    }

    .animate-button {
        opacity: 0;
        transform: scale(0.9);
        animation: fadeInButton 1s 0.7s forwards ease-out;
    }

    .animate-table {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInTable 1s 0.9s forwards ease-out;
    }

    .animate-row {
        opacity: 0;
        transform: translateX(-20px);
        animation: fadeInRow 0.8s forwards ease-out;
    }

    /* Keyframes */
    @@keyframes fadeInTitle {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInSubtitle {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInButton {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeInTable {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInRow {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
