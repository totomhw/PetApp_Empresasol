@model PetApp_Empresa.Models.Adopcione

@{
    ViewData["Title"] = "Detalles de la Adopción";
}

<h1>Detalles de la Adopción</h1>

<div>
    <h4>Información de la Adopción</h4>
    <hr />
    <dl class="row">
        <!-- Fecha de Adopción -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaAprobacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaAprobacion)
        </dd>

        <!-- Mascota -->
        <dt class="col-sm-2">
            Mascota
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mascota.Nombre)
        </dd>

        <!-- Usuario -->
        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>

        <!-- Estado de la Adopción -->
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <!-- Nombre Completo -->
        <dt class="col-sm-2">
            Nombre Completo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>

        <!-- Correo Electrónico -->
        <dt class="col-sm-2">
            Correo Electrónico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CorreoElectronico)
        </dd>

        <!-- Teléfono -->
        <dt class="col-sm-2">
            Teléfono
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>

        <!-- Dirección -->
        <dt class="col-sm-2">
            Dirección
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.AdopcionId">Editar</a> |
    <a asp-action="Index">Volver a la Lista</a>
</div>
