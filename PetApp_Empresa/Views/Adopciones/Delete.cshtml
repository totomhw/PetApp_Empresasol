@model PetApp_Empresa.Models.Adopcione

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Registro</h1>

<h3>¿Estás seguro de que deseas eliminar este registro?</h3>
<div class="delete-container">
    <h4>Detalles de Adopción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaAprobacion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FechaAprobacion)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Mascota)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Mascota.MascotaId)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Usuario.UsuarioId)
        </dd>
    </dl>

    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="AdopcionId" />
        <input type="submit" value="Eliminar" class="btn btn-danger delete-btn" />
        <a asp-action="Index" class="btn btn-secondary back-btn">Volver a la Lista</a>
    </form>
</div>

<style>
    /* Contenedor principal */
    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-out;
    }

    /* Título */
    h1 {
        text-align: center;
        font-size: 2rem;
        color: #7A1E3D;
        font-weight: bold;
        margin-bottom: 20px;
    }

    h3 {
        text-align: center;
        font-size: 1.2rem;
        color: #333333;
        margin-bottom: 20px;
    }

    /* Detalles del registro */
    dl.row {
        margin: 20px 0;
    }

    dt {
        font-weight: bold;
        color: #555555;
    }

    dd {
        font-size: 1rem;
        color: #333333;
    }

    /* Botones */
    form .btn {
        font-size: 1rem;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 5px;
        transition: transform 0.2s ease, background-color 0.3s ease;
    }

    /* Botón de eliminar */
    .delete-btn {
        background-color: #7A1E3D;
        color: white;
        border: none;
    }

    .delete-btn:hover {
        background-color: #c82333;
        transform: scale(1.05);
    }

    /* Botón de volver */
    .back-btn {
        background-color: #cccccc;
        color: black;
        text-decoration: none;
        margin-left: 10px;
    }

    .back-btn:hover {
        background-color: #aaaaaa;
        transform: scale(1.05);
    }

    /* Animación de entrada */
    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsivo */
    @@media (max-width: 576px) {
        .delete-container {
            padding: 15px;
        }

        h1 {
            font-size: 1.5rem;
        }

        .btn {
            font-size: 0.9rem;
        }
    }
</style>
