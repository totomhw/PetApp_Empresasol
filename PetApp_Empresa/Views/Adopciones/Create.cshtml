@model PetApp_Empresa.Models.Adopcione

@{
    ViewData["Title"] = "Crear Solicitud de Adopción";
}

<div class="main-content">
    <div class="form-container">
        <h1>Crear Solicitud de Adopción</h1>
        <form asp-action="SolicitarAdopcion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Grupo de Campos -->
            <div class="form-group-container">
                <!-- Mascota -->
                <div class="form-group">
                    <label asp-for="MascotaId" class="control-label"></label>
                    <select asp-for="MascotaId" class="form-control" asp-items="ViewBag.MascotaId"></select>
                    <span asp-validation-for="MascotaId" class="text-danger"></span>
                </div>

                <!-- Nombre Completo -->
                <div class="form-group">
                    <label asp-for="NombreCompleto" class="control-label"></label>
                    <input asp-for="NombreCompleto" class="form-control" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>

                <!-- Correo Electrónico -->
                <div class="form-group">
                    <label asp-for="CorreoElectronico" class="control-label"></label>
                    <input asp-for="CorreoElectronico" class="form-control" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>

                <!-- Teléfono -->
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <!-- Dirección -->
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>

            <!-- Botón -->
            <div class="form-group mt-3">
                <input type="submit" value="Enviar Solicitud" class="btn-primary" />
            </div>
        </form>
        <a asp-action="Index" class="back-btn">Volver a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Animación de deslizamiento suave */
    @@keyframes slideIn {
        from {
            transform: translateY(20px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Contenedor del formulario */
    .form-container {
        background-color: #fff; /* Fondo blanco para resaltar */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 60px auto;
        animation: slideIn 1s ease-out forwards;
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: transform 0.3s ease;
    }

    /* Título del formulario */
    .form-container h1 {
        font-size: 3rem;
        font-weight: bold;
        color: #2C3E50; /* Color oscuro para el título */
        text-align: center;
        margin-bottom: 40px;
        font-family: 'Roboto', sans-serif;
    }

    /* Estilo para los campos del formulario */
    .form-group {
        background-color: #F4F6F7;
        border-radius: 12px;
        margin-bottom: 25px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .form-group:hover {
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);
    }

    /* Etiquetas */
    .form-group label {
        font-size: 1.1rem;
        color: #34495E;
        margin-bottom: 10px;
        font-weight: bold;
    }

    /* Campos de entrada */
    .form-control {
        font-size: 1rem;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #BDC3C7;
        background-color: #fff;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #E74C3C;
        box-shadow: 0 0 8px rgba(231, 76, 60, 0.2);
    }

    /* Botón de envío */
    .btn-primary {
        background-color: #7A1E3D; /* Color del layout */
        border: none;
        color: #fff;
        padding: 15px 35px;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 8px;
        text-transform: uppercase;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 8px 25px rgba(122, 30, 61, 0.1);
    }

    .btn-primary:hover {
        background-color: #5B152E;
        box-shadow: 0 12px 40px rgba(122, 30, 61, 0.2);
        transform: translateY(-3px);
    }

    /* Enlace "Volver a la lista" */
    .back-btn {
        margin-top: 30px;
        font-size: 1rem;
        color: #7A1E3D; /* Color del layout */
        text-decoration: none;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    .back-btn:hover {
        color: #5B152E;
        text-decoration: underline;
    }

    /* Diseño centralizado */
    .main-content {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #ECF0F1;
    }

    /* Agrupación de campos */
    .form-group-container {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        width: 100%;
    }

    .form-group-container .form-group {
        flex: 1;
        min-width: 280px;
    }
</style>







