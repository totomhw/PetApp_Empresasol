@model IEnumerable<PetApp_Empresa.Models.Adopcione>

@{
    ViewData["Title"] = "Lista de Solicitudes de Adopción";
}

<div class="container py-5 animate-page">
    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient animate-title">@ViewData["Title"]</h1>
        <p class="lead text-muted animate-subtitle">
            Gestiona y revisa todas las solicitudes de adopción de manera eficiente.
        </p>
    </div>

    <!-- Botón Crear Nueva Solicitud -->
    <div class="d-flex justify-content-end mb-4 animate-button">
        <a asp-action="Create" class="btn btn-create shadow-sm d-flex align-items-center">
            <i class="fas fa-plus me-2"></i> Crear Nueva Solicitud
        </a>
    </div>

    <!-- Tabla -->
    <div class="table-responsive animate-table">
        <table class="table table-borderless shadow-sm rounded">
            <thead class="table-header">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FechaAprobacion)</th>
                    <th>Mascota</th>
                    <th>Usuario</th>
                    <th>Estado</th>
                    <th>Nombre Completo</th>
                    <th>Correo Electrónico</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle animate-row">
                        <td>@Html.DisplayFor(modelItem => item.FechaAprobacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Mascota.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.Nombre)</td>
                        <td>
                            <span class="badge @(item.Estado == "Aprobado" ? "bg-approve" : "bg-pending")">
                                @Html.DisplayFor(modelItem => item.Estado)
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                        <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.AdopcionId" class="btn btn-sm btn-outline-primary me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.AdopcionId" class="btn btn-sm btn-outline-secondary me-2">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.AdopcionId" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    /* Gradiente para títulos */
    .text-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Botón de acción */
    .btn-create {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        background-color: #a81c1c;
        color: white;
        border-radius: 0.5rem;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
    }

    .btn-create:hover {
        background-color: #800020;
    }

    /* Tabla */
    .table {
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .table-header {
        background: linear-gradient(to right, #a81c1c, #800020);
        color: white;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.05rem;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(168, 28, 28, 0.1);
        cursor: pointer;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
    }

    .bg-approve {
        background-color: #a81c1c;
        color: white;
    }

    .bg-pending {
        background-color: #ffc107;
        color: #212529;
    }

    /* Animaciones */
    .animate-page {
        opacity: 0;
        animation: fadeInPage 1s forwards ease-out;
    }

    .animate-title {
        opacity: 0;
        transform: translateY(-50px) rotateX(10deg);
        animation: fadeInRotateDown 1.2s forwards ease-out;
    }

    .animate-subtitle {
        opacity: 0;
        transform: translateY(-20px) scale(0.9);
        animation: fadeInScale 1.2s 0.4s forwards ease-out;
    }

    .animate-button {
        opacity: 0;
        transform: scale(0.8);
        animation: zoomIn 1s 0.8s forwards ease-out;
    }

    .animate-table {
        opacity: 0;
        transform: translateY(50px);
        animation: fadeUp 1s 0.6s forwards ease-out;
    }

    .animate-row {
        opacity: 0;
        transform: translateY(20px) rotateX(5deg);
        animation: rowFadeIn 0.8s forwards ease-out;
    }

    .animate-row:nth-child(odd) {
        animation-delay: 0.3s;
    }

    .animate-row:nth-child(even) {
        animation-delay: 0.5s;
    }

    @@keyframes fadeInPage {
        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInRotateDown {
        to {
            opacity: 1;
            transform: translateY(0) rotateX(0);
        }
    }

    @@keyframes fadeInScale {
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @@keyframes zoomIn {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes rowFadeIn {
        to {
            opacity: 1;
            transform: translateY(0) rotateX(0);
        }
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
