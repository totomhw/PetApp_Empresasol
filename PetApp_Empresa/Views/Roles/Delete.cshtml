@model PetApp_Empresa.Models.Role

@{
    ViewData["Title"] = "Delete";
}

<div class="role-delete-container">
    <h1 class="titulo-negro text-center">Eliminar Rol</h1>

    <div class="role-details">
        <h3 class="text-center mb-4">¿Estás seguro de que deseas eliminar este rol?</h3>
        <hr />
        <dl class="row">
            <!-- Nombre del rol -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            
            <!-- Descripción del rol -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="RolId" />

            <!-- Botón de Eliminar -->
            <div class="text-center mt-4">
                <input type="submit" value="Eliminar" class="btn btn-danger btn-animated" />
            </div>
        </form>

        <!-- Enlace para regresar -->
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-back btn-animated">Volver al Listado</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    /* Contenedor principal */
    .role-delete-container {
        margin-top: 50px;
    }

    /* Estilo del título */
    .titulo-negro {
        font-family: 'Arial', sans-serif;
        font-size: 2rem;
        color: black !important;
        margin-bottom: 20px;
    }

    /* Estilos de los detalles del rol */
    .role-details {
        background-color: var(--background-color);
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-out;
        max-width: 400px;
        margin: 0 auto;
    }

    .role-details h3 {
        font-size: 1.5rem;
        color: var(--primary-color);
        font-weight: 600;
    }

    .role-details dl dt {
        font-weight: bold;
        color: var(--primary-color);
    }

    .role-details dl dd {
        color: var(--text-color);
    }

    /* Botón de Eliminar */
    .btn-danger {
        background-color: #7A1E3D; /* Rojo para "Eliminar" */
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    /* Botón de Volver */
    .btn-back {
        background-color: #cccccc; /* Gris */
        color: black;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-back:hover {
        background-color: #aaaaaa;
    }

    /* Animación */
    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
