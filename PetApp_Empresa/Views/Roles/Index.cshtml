@model IEnumerable<PetApp_Empresa.Models.Role>

@{
    ViewData["Title"] = "Gestión de Roles";
    <!-- Aseguramos que el título esté definido -->
}

<div class="container py-5">
    <!-- Título -->
    <div class="text-center mb-4 animate-title">
        <h1 class="display-4 title-gradient">Gestión de Roles</h1>
        <p class="lead text-muted animate-subtitle">Gestiona los roles de usuario de forma eficiente y profesional.</p>
    </div>

    <!-- Botón Crear Nuevo -->
    <div class="text-center mb-5 animate-button">
        <a asp-action="Create" class="btn btn-create-role">
            <i class="fas fa-plus-circle me-2"></i>Crear Nuevo Rol
        </a>
    </div>

    <!-- Tabla de roles -->
    <div class="card shadow-sm p-4 card-dark animate-table">
        <table class="table table-hover">
            <thead class="table-header animate-header">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-row animate-row">
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.RolId" class="btn btn-edit-role">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.RolId" class="btn btn-details-role">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.RolId" class="btn btn-delete-role">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No hay roles disponibles.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Título con gradiente */
    .title-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Botón Crear Nuevo */
    .btn-create-role {
        background: linear-gradient(45deg, #a81c1c, #800020);
        color: #ffffff !important;
        font-size: 1.1rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-create-role:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(168, 28, 28, 0.5);
        }

    /* Tabla */
    .card {
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
    }

    .card-dark {
        background-color: #1e1e1e; /* Tono oscuro */
        color: #ffffff;
        border: none;
    }

    .table-header {
        background: linear-gradient(45deg, #800020, #a81c1c);
        color: #ffffff;
        font-weight: bold;
    }

    .table-row {
        transition: background-color 0.3s ease;
    }

        .table-row:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

    /* Botones de acción */
    .btn {
        font-size: 0.9rem;
        font-weight: bold;
        padding: 8px 15px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .btn-edit-role {
        background-color: #a81c1c !important;
        color: #ffffff !important;
        border: none;
    }

        .btn-edit-role:hover {
            background-color: #800020 !important;
        }

    .btn-details-role {
        background-color: #0056b3 !important;
        color: #ffffff !important;
        border: none;
    }

        .btn-details-role:hover {
            background-color: #003d80 !important;
        }

    .btn-delete-role {
        background-color: #e63946 !important;
        color: #ffffff !important;
        border: none;
    }

        .btn-delete-role:hover {
            background-color: #b71c1c !important;
        }

    /* Animaciones */
    .animate-title {
        opacity: 0;
        transform: translateY(-30px);
        animation: fadeInTitle 1s forwards ease-out;
    }

    .animate-subtitle {
        opacity: 0;
        transform: translateY(-20px);
        animation: fadeInSubtitle 1s 0.5s forwards ease-out;
    }

    .animate-button {
        opacity: 0;
        transform: scale(0.9);
        animation: fadeInButton 1s 0.7s forwards ease-out;
    }

    .animate-table {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInTable 1s 0.9s forwards ease-out;
    }

    .animate-row {
        opacity: 0;
        transform: translateX(-20px);
        animation: fadeInRow 0.8s forwards ease-out;
    }

    @@keyframes fadeInTitle {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInSubtitle {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInButton {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeInTable {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInRow {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
