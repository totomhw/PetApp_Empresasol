@model List<PetApp_Empresa.Models.Compra>

<div class="container py-5 animate-page">
    <!-- Título -->
    <div class="text-center mb-4">
        <h2 class="display-5 fw-bold text-gradient animate-title">Validaciones de Pago</h2>
        <p class="lead text-muted animate-subtitle">
            Revisa y valida los pagos realizados por los usuarios.
        </p>
    </div>

    <!-- Tabla de validaciones -->
    <div class="table-responsive animate-table">
        <table class="table table-hover shadow-sm border-0">
            <thead class="table-gradient text-white">
                <tr>
                    <th>ID</th>
                    <th>Total</th>
                    <th>Fecha</th>
                    <th>Banco de Destino</th>
                    <th>Número de Transacción</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var compra in Model)
                {
                    <tr class="align-middle animate-row">
                        <td>@compra.CompraId</td>
                        <td>@compra.Total.ToString("C")</td>
                        <td>@compra.FechaCompra.ToString("dd/MM/yyyy")</td>
                        <td>@compra.BancoDestino</td>
                        <td>@compra.NumeroTransaccion</td>
                        <td class="text-center">
                            @if (!compra.Validado)
                            {
                                <form asp-action="ValidarPago" asp-controller="Validaciones" method="post" class="d-inline">
                                    @Html.Hidden("compraId", compra.CompraId)
                                    <button type="submit" class="btn btn-sm btn-validate">
                                        <i class="fas fa-check-circle me-1"></i> Validar
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="badge bg-success text-white">
                                    <i class="fas fa-check me-1"></i> Validado
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    /* Título gradiente */
    .text-gradient {
        background: linear-gradient(to right, #a81c1c, #800020);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Encabezado de tabla */
    .table-gradient {
        background: linear-gradient(to right, #800020, #a81c1c);
    }

    /* Tabla */
    .table {
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(168, 28, 28, 0.1);
        cursor: pointer;
    }

    /* Botón Validar */
    .btn-validate {
        background-color: #28a745;
        color: #ffffff;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        padding: 5px 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-validate:hover {
        transform: scale(1.05);
        box-shadow: 0px 6px 15px rgba(40, 167, 69, 0.3);
    }

    /* Badge Validado */
    .badge {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
    }

    /* Animaciones */
    .animate-page {
        opacity: 0;
        animation: fadeInPage 1s forwards ease-out;
    }

    .animate-title {
        opacity: 0;
        transform: translateY(-50px);
        animation: fadeInSlideDown 1s forwards ease-out;
    }

    .animate-subtitle {
        opacity: 0;
        transform: translateY(-30px);
        animation: fadeInSlideDown 1s 0.5s forwards ease-out;
    }

    .animate-table {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInSlideUp 1s 0.8s forwards ease-out;
    }

    .animate-row {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInRow 0.8s forwards ease-out;
    }

    .animate-row:nth-child(odd) {
        animation-delay: 0.3s;
    }

    .animate-row:nth-child(even) {
        animation-delay: 0.5s;
    }

    @@keyframes fadeInPage {
        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInSlideDown {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInRow {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<!-- Librerías necesarias -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">

<!-- Script -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const rows = document.querySelectorAll(".animate-row");
        rows.forEach((row, index) => {
            row.style.animationDelay = `${index * 0.1}s`;
        });
    });
</script>
