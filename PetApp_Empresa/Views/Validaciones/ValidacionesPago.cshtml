@model List<PetApp_Empresa.Models.Compra>

<h2>Validaciones de Pago</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Total</th>
            <th>Fecha</th>
            <th>Banco de Destino</th>
            <th>Número de Transacción</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var compra in Model)
        {
            <tr>
                <td>@compra.CompraId</td>
                <td>@compra.Total.ToString("C")</td>
                <td>@compra.FechaCompra.ToString("dd/MM/yyyy")</td>
                <td>@compra.BancoDestino</td>
                <td>@compra.NumeroTransaccion</td>
                <td>
                    @if (!compra.Validado)
                    {
                        <form asp-action="ValidarPago" asp-controller="Validaciones" method="post">
                            @Html.Hidden("compraId", compra.CompraId)
                            <button type="submit" class="btn btn-success">Validar</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">Validado</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
